static int * easyAiPlayer(){
	int out[2];
	srand(time(NULL));
	out[0]=rand()%10;
	out[1]=rand()%10;
	return out;
}

static int * aiPlayer(int board[10][10], int shots[10][10],bool lastShotHit,bool lastShotSank){
	static int lastRow0=-1,lastCol0=-1,
			lastRow1=-1,lastCol1=-1;
	int out[2];
	if(lastShotSank){
		lastRow0=-1;lastCol0=-1;
		lastRow1=-1;lastCol1=-1;
	}
	if(isValidRC(lastRow0,lastCol0)){

	}else{
		srand(time(NULL));
		out[0]=lastRow0=rand()%10;
		out[1]=lastCol0=rand()%10;
	}
	return out;

}

static bool isValidRC(int r,int c){
	if(r>=0 && r<10){
		if(c>=0 &&c<10){
			return true;
		}
	}
	return false;
}

static bool isHit(int board[10][10], int r, int c){
	if(board[r][c]>0){
		return true;
	}
	return false;
}

static void debugPrintArray(int array[10][10]){
	printf("\n-----------------------\n");
	for(int r=0;r<10;r++){
		printf("|");
		for(int c=0;c<10;c++){
			if(array[r][c]>=0){
				printf(" %d",array[r][c]);
			} else {
				printf("%d",array[r][c]);
			}
		}
		printf(" |\n");
	}
	printf("-----------------------\n");
}
