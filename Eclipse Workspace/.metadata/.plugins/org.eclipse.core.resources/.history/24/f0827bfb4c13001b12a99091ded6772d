static void aiPlayer(int board[10][10], int shots[10][10]){
	static int lastRow0=-1,lastCol0=-1,
			lastRow1=-1,lastCol1=-1;
	if(isValidRC(lastRow0,lastCol0));

}

static bool isValidRC(int r,int c){
	if(r>=0 && r<10){
		if(c>=0 &&c<10){
			return true;
		}
	}
	return false;
}

static bool isHit(int board[10][10], int r, int c){
	if(board[r][c]>0){
		return true;
	}
	return false;
}

static void debugPrintArray(int array[10][10]){
	printf("\n");
	for(int r=0;r<10;r++){
		printf("{");
		for(int c=0;c<10;c++){
			printf("%d,",array[r][c]);
		}
		printf("}\n");
	}
}
